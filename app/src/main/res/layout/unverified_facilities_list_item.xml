<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tj_gray_bg"
    android:padding="10dp">


    <TextView
        android:id="@+id/active_journey_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Journey Name"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/active_journey_list_buddy_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/active_journey_list_name"
        android:layout_marginLeft="5dp"
        android:text="Some place"
        android:textColor="@color/black" />


</RelativeLayout>
